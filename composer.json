{
    "name": "open-orchestra/open-orchestra",
    "license": "MIT",
    "type": "project",
    "description": "Example of OpenOrchestra backoffice implementation",
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "minimum-stability": "dev",
    "require": {
        "incenteev/composer-parameter-handler": "~2.0",
        "open-orchestra/open-orchestra-cms-bundle": "1.0.x-dev",
        "open-orchestra/open-orchestra-user-bundle": "1.0.x-dev",
        "open-orchestra/open-orchestra-workflow-function-bundle": "1.0.x-dev",
        "open-orchestra/open-orchestra-media-admin-bundle": "1.0.x-dev",
        "open-orchestra/open-orchestra-media-bundle": "1.0.x-dev",
        "open-orchestra/open-orchestra-libs": "1.0.x-dev",
        "open-orchestra/open-orchestra-model-bundle": "1.0.x-dev",
        "open-orchestra/open-orchestra-model-interface": "1.0.x-dev",
        "open-orchestra/open-orchestra-base-bundle": "1.0.x-dev",
        "open-orchestra/open-orchestra-base-api-bundle": "1.0.x-dev",
        "open-orchestra/open-orchestra-display-bundle": "1.0.x-dev",
        "open-orchestra/open-orchestra-base-api-mongo-model-bundle": "1.0.x-dev",
        "doctrine/cache": "1.5.*"
    },
    "require-dev": {
        "jmikola/geojson": "~1.0",
        "phpunit/phpunit" : "4.8.8",
        "phake/phake": "2.1.0",
        "behat/behat": "~3.0.15",
        "behat/symfony2-extension": "2.0.0",
        "behat/mink": "1.6.1",
        "behat/mink-extension": "2.0.1",
        "behat/mink-browserkit-driver": "1.2.0",
        "behat/mink-selenium2-driver": "~1.2",
        "phpdocumentor/reflection-docblock": "2.0.4"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "2.4-dev"
        }
    }
}
